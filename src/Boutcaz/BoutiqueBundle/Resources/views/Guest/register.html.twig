
{{ form_start(form) }}
	
	{# Le nom d'utilisateur et le mail #}
	<div class="log-guest_content">	
		<div class="error"=>{{ form_errors(form.username) }}</div>
		<div class="error"=>{{ form_errors(form.email) }}</div>
		
		{{ form_label(form.username, label|default(null), { 'label_attr': { 'class': 'label' } }) }}
		{{ form_widget(form.username)}}
		{{ form_widget(form.email)}}
	
	</div>
	
	<div class="clear"></div>
	
	{# Le mot de passe #}
	<div class="log-guest_content">
		<div class="error"=>{{ form_errors(form.password.first) }}</div>
		<div class="error"=>{{ form_errors(form.password.second) }}</div>
		
		{{ form_label(form.password.first, label|default(null), { 'label_attr': { 'class': 'label' } }) }}
		{{ form_widget(form.password.first)}}
		{{ form_widget(form.password.second)}}
		
	</div>

